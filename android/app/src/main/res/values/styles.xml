<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/accent_blue_dark</item>
        <item name="colorAccent">@color/accent_blue</item>
    </style>


    <style name="LoginEditTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:paddingTop">@dimen/dimen_12</item>
        <item name="android:paddingBottom">@dimen/dimen_12</item>
        <item name="android:textColor">@color/whole_solid_button_text_selector</item>
    </style>

    <style name="BottomWholeWidthPartnerBlueSolidButton" parent="PrimaryButtonStyle">
        <item name="android:background">@drawable/bg_corner_rect_partner_blue_solid_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dimen_12</item>
        <item name="android:layout_marginRight">@dimen/dimen_12</item>
        <item name="android:minHeight">@dimen/dimen_48</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="DigitalRedDotStyle">
        <item name="android:background">@drawable/bg_digital_red_dot</item>
        <item name="android:layout_width">@dimen/digital_red_dot_size</item>
        <item name="android:layout_height">@dimen/digital_red_dot_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="RedDotStyle">
        <item name="android:background">@drawable/bg_red_dot</item>
        <item name="android:layout_width">@dimen/red_dot_size</item>
        <item name="android:layout_height">@dimen/red_dot_size</item>
    </style>

    <style name="PortraitStyle">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="PortraitStyle.Small">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>

    <style name="PortraitStyle.Large">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

</resources>
