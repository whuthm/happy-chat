<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_light"
    android:paddingBottom="@dimen/dimen_6"
    android:paddingLeft="@dimen/dimen_12"
    android:paddingRight="@dimen/dimen_12"
    android:paddingTop="@dimen/dimen_6">

    <EditText
        android:id="@+id/frag_chat_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/frag_chat_send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_12"
        android:singleLine="true" />

    <com.barran.lib.view.text.ColorfulTextView
        android:id="@+id/frag_chat_send"
        app:bgRadius="@dimen/dimen_4"
        app:bgSolidColor="@color/primary_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_3"
        android:paddingLeft="@dimen/dimen_6"
        android:paddingRight="@dimen/dimen_6"
        android:paddingTop="@dimen/dimen_3"
        android:text="@string/text_send"
        android:textColor="@android:color/white" />

</android.support.constraint.ConstraintLayout>