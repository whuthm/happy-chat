<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_6"
    android:paddingLeft="@dimen/dimen_12"
    android:paddingRight="@dimen/dimen_12"
    android:paddingTop="@dimen/dimen_6">

    <ImageView
        android:id="@+id/layout_conversation_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat" />

    <TextView
        android:id="@+id/layout_conversation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_12"
        app:layout_constraintLeft_toRightOf="@+id/layout_conversation_icon" />

    <TextView
        android:id="@+id/layout_conversation_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/layout_conversation_title"
        app:layout_constraintTop_toBottomOf="@+id/layout_conversation_title" />

</android.support.constraint.ConstraintLayout>